{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/verify/([^/]+)",
      "dest": "/frontend/verify/[token]"
    },
    {
      "src": "/threads/([^/]+)",
      "dest": "/frontend/threads/[id]"
    },
    {
      "src": "/api/tip-verify",
      "dest": "/backend/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' https://checkout.paystack.com 'unsafe-inline';"
        }
      ]
    }
  ]
}