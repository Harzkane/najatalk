{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/verify/([^/]+)",
      "dest": "/frontend/verify/[token]"
    },
    {
      "src": "/threads/tip-success",
      "dest": "/frontend/threads/tip-success"
    },
    {
      "src": "/threads/([^/]+)",
      "dest": "/frontend/threads/[id]"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}